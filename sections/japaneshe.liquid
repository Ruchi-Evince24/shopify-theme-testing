<!-- Welcome section starts -->
<section class="japanese">
  <div class="container">
    <div class="japanese-outter">
       <div class="image-section">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="Welcome Image">
      </div>
      <!-- Heading and Title Block -->
      <div class="japanese_block">
              
        <h1><b>{{ section.settings.heading }}</b></h1>
          <p>{{ section.settings.paragraph }}</p>
         <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
      </div>


      <!-- Image Section -->
     
    </div>
  </div>
</section>
<!-- Welcome section ends -->
{% schema %}

{
  "name": "Japanese Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
   
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph"
    },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Japanese Section",
      "category": "ADVANCED LAYOUT"
    }
  ]
}
{% endschema %}
