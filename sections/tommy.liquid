<!-- Welcome section starts -->
<section class="tommy">
  <div class="container">
    <div class="tommy-outter">
      <!-- Heading and Title Block -->
     <div class="tommy_block">
         <h4>{{ section.settings.subheading }}</h4>
        <h1><b>{{ section.settings.heading }}</b></h1>
        <p>{{ section.settings.paragraph }}</p>
       <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
  </div>

    
      <!-- Image Section -->
       <div class="image-section">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="Welcome Image">
      </div>
    </div>
  </div>
</section>
<!-- Welcome section ends -->

{% schema %}
{
  "name": "Tommy Section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },

    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Tommy Section",
      "category": "ADVANCED LAYOUT"
    }
  ]
}

{% endschema %}

