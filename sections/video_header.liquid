{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "url",
      "label": "Video URL",
      "default": "https://example.com/default-video.mp4"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Button"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video Block"
    }
  ]
}
{% endschema %}

<div class="video-section">
  <div class="video-container">
    <video muted autoplay playsinline loop>
      <source src="{{ section.settings.url | append: '.mp4' }}" type="video/mp4">
    </video>
    <div class="video_heading">
      <h1><b>{{ section.settings.heading }}</b></h1>
      <p>{{ section.settings.paragraph }}</p>
      <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
    </div>
    <div class="video_content">
      
    </div>
  </div>
</div>
